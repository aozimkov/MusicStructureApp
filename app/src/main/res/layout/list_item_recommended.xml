<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_element">

    <ImageView
        android:id="@+id/recommended_track_image"
        android:src="@drawable/ic_launcher_background"
        style="@style/ListItems.Image"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/list_text_padding">

        <TextView
            android:id="@+id/recommended_track"
            tools:text="Some track name"
            style="@style/ListItems.Text.Song"/>

        <TextView
            android:id="@+id/recommended_author"
            tools:text="Some Author"
            style="@style/ListItems.Text.Bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recommended_track_time"
        tools:text="04:44"
        style="@style/ListItems.Time"/>

</LinearLayout>
