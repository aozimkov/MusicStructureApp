<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/track_image"
        style="@style/ListItems.Image"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/list_text_padding">

        <TextView
            android:id="@+id/track"
            style="@style/ListItems.Text.Song"
            tools:text="Some track name" />

        <TextView
            android:id="@+id/album"
            style="@style/ListItems.Text"
            tools:text="Some Author" />

        <TextView
            android:id="@+id/author"
            style="@style/ListItems.Text.Bold"
            tools:text="Some Author" />

    </LinearLayout>

    <TextView
        android:id="@+id/track_time"
        style="@style/ListItems.Time"
        tools:text="04:44" />

    <ImageView
        android:id="@+id/play_button"
        style="@style/ListItems.Button"
        android:src="@drawable/ic_play_arrow" />

</LinearLayout>
